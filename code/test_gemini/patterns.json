{
  "sensitive_patterns": [
    {
      "name": "주민등록번호",
      "regex": "\\b(\\d{2}(0[1-9]|1[0-2])(0[1-9]|[12]\\d|3[01]))[- ]?([1-4]\\d{6})\\b",
      "action": "mask",
      "replacement": "개인정보"
    },
    {
      "name": "전화번호",
      "regex": "010[-]?\\d{4}[-]?\\d{4}",
      "action": "mask",
      "replacement": "개인정보"
    },
    {
      "name": "전화번호_지역번호",
      "regex": "\\b(?:\\+?82[- ]?1[016-9]|0?1[016-9])[- ]?\\d{3,4}[- ]?\\d{4}\\b",
      "action": "mask",
      "replacement": "[PHONE]"
    },
    {
      "name": "전화번호_국가코드",
      "regex": "\\b(?:\\+?82[- ]?(?:2|3[1-3]|4[1-4]|5[1-5]|6[1-4])|0?(?:2|3[1-3]|4[1-4]|5[1-5]|6[1-4]))[- ]?\\d{3,4}[- ]?\\d{4}\\b",
      "action": "mask",
      "replacement": "[PHONE]"
    },
    {
      "name": "openai_api_key",
      "regex": "\\bsk-[A-Za-z0-9]{20,}\\b",
      "action": "block",
      "message": "API 키(OpenAI) 포함"
    },
    {
      "name": "github_pat",
      "regex": "\\bghp_[A-Za-z0-9]{36,}\\b",
      "action": "block",
      "message": "API 키(GitHub PAT) 포함"
    },
    {
      "name": "google_api_key",
      "regex": "\\bAIza[0-9A-Za-z_\\-]{35}\\b",
      "action": "block",
      "message": "API 키(Google) 포함"
    },
    {
      "name": "aws_access_key",
      "regex": "\\b(?:AKIA|ASIA)[A-Z0-9]{16}\\b",
      "action": "block",
      "message": "API 키(AWS AccessKey) 포함"
    },
    {
      "name": "slack_token",
      "regex": "\\bxox[abps]-[A-Za-z0-9-]{10,}\\b",
      "action": "block",
      "message": "API 토큰(Slack) 포함"
    },
    {
      "name": "신용카드",
      "regex": "\\b(?:\\d[ -]*?){13,19}\\b",
      "action": "mask",
      "replacement": "[CARD]",
      "validator": "LUHN"
    },
    {
      "name": "ip_v4",
      "regex": "\\b((25[0-5]|2[0-4]\\d|[01]?\\d\\d?)\\.){3}(25[0-5]|2[0-4]\\d|[01]?\\d\\d?)\\b",
      "action": "mask",
      "replacement": "[IP]"
    },
    {
      "name": "이메일",
      "regex": "[A-Za-z0-9._%+-]+@[A-Za-z0-9.-]+\\.[A-Za-z]{2,}",
      "action": "mask",
      "replacement": "[EMAIL]"
    },
    {
      "name": "jwt",
      "regex": "\\beyJ[A-Za-z0-9_\\-]+\\.[A-Za-z0-9_\\-]+\\.[A-Za-z0-9_\\-]+\\b",
      "action": "mask",
      "replacement": "[JWT]"
    },
    {
      "name": "범용 고유 식별자",
      "regex": "\\b[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[1-5][0-9a-fA-F]{3}-[89abAB][0-9a-fA-F]{3}-[0-9a-fA-F]{12}\\b",
      "action": "mask",
      "replacement": "[UUID]"
    },
    {
      "name": "ipv6",
      "regex": "\\b(?:[0-9A-Fa-f]{1,4}:){2,7}[0-9A-Fa-f]{1,4}\\b",
      "action": "mask",
      "replacement": "[IP]"
    },
    {
      "name": "mac",
      "regex": "\\b([0-9A-Fa-f]{2}[:-]){5}[0-9A-Fa-f]{2}\\b",
      "action": "mask",
      "replacement": "[MAC]"
    },
    {
      "name": "사업자등록번호",
      "regex": "\\b\\d{3}-?\\d{2}-?\\d{5}\\b",
      "action": "block",
      "message": "사업자등록번호 포함"
    },
    { "name": "개인 키 블록",
      "regex": "-----BEGIN PRIVATE KEY-----[\\s\\S]+?-----END PRIVATE KEY-----",
      "action": "block",
      "message": "개인 키 블록 포함"
    },
    {
      "name": "인증서 블록",
      "regex": "-----BEGIN CERTIFICATE-----[\\s\\S]+?-----END CERTIFICATE-----",
      "action": "block",
      "message": "인증서 블록 포함"
    },
    {
      "name": "auth_bearer_header",
      "regex": "(?i)Authorization:\\s*Bearer\\s+[A-Za-z0-9_\\-\\.]+",
      "action": "mask",
      "replacement": "Authorization: Bearer [TOKEN]"
    },
    {
      "name": "url_access_token",
      "regex": "(?i)(access_token|id_token|session|auth|token)=([A-Za-z0-9._\\-]+)",
      "action": "mask",
      "replacement": "$1=[TOKEN]"
    },
    {
      "name": "여권번호",
      "regex": "\\b[A-Z]{1,2}\\d{7,8}\\b",
      "action": "mask",
      "replacement": "[PASSPORT]"
    },
    {
      "name": "운전면허번호",
      "regex": "\\b(?:\\d{2}-\\d{2}-\\d{6}-\\d{2}|\\d{12})\\b",
      "action": "mask",
      "replacement": "[DRIVER_LICENSE]"
    },
    {
      "name": "주소",
      "regex": "\\b(\\S+[시군구])\\s+(\\S+[동읍면])?\\s*(\\S+[로길])\\b",
      "action": "mask",
      "replacement": "[ADDRESS]"
    },
    {
      "name": "계좌번호",
      "regex": "\\b\\d{2,6}[-]?\\d{2,6}[-]?\\d{2,6}\\b",
      "action": "mask",
      "replacement": "[ACCOUNT]"
    },
    {
      "name": "Basic 인증 헤더",
      "regex": "(?i)Authorization:\\s*Basic\\s+[A-Za-z0-9+/=]+",
      "action": "mask",
      "replacement": "Authorization: Basic [CREDENTIAL]"
    },
    { "name": "db_conn_uri",
      "regex": "(?i)\\b(postgres(?:ql)?|mysql|mariadb|mongodb(?:\\+srv)?|redis|mssql|oracle)://[^\\s]+",
      "action": "block", 
      "message": "DB 연결 URI 포함" },
    { "name": "jdbc_url", 
      "regex": "(?i)\\bjdbc:[a-z0-9]+:[^\\s;]+", 
      "action": "block",
      "message": "JDBC URL 포함" }
  ]
}